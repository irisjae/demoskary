<tabs>
	<tab active={ args .tab === 'all' }>
		<a href="#match/catalog">
			所有球賽
			<component-wavify />
		</a>
	</tab>
	<tab active={ args .tab === 'private' }>
		<a href="#match/private/catalog">
			友隊球賽
			<component-wavify />
		</a>
	</tab>
	<highlight style="left: { highlight_position () }%;" />
