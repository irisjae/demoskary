<component-main-content>
	<open-match>
		<tags>
			<label>標籤提供更多球賽資料</label>
			<component-tag-control>請輸入tags</component-tag-control>
		</tags>
		<reserve-priorities>
			<is-private>
				
			</is-private>
			<days-to-reserve>
				
			</days-to-reserve>
		</reserve-priorities>
